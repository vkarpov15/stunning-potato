{
  "devDependencies": {
    "eslint": "5.3.0",
    "mocha": "5.2.0",
    "pkg": "4.3.4",
    "serve": "10.0.2"
  },
  "scripts": {
    "lint": "eslint .",
    "serve": "serve",
    "test": "mocha ./test/*.test.js"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "comma-style": "error",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1,
          "VariableDeclarator": 2
        }
      ],
      "no-constant-condition": "off",
      "keyword-spacing": "error",
      "no-buffer-constructor": "error",
      "no-console": "off",
      "no-multi-spaces": "error",
      "func-call-spacing": "error",
      "no-trailing-spaces": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "space-before-blocks": "error",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-infix-ops": "error",
      "space-unary-ops": "error",
      "no-var": "error",
      "prefer-const": "error"
    }
  }
}
